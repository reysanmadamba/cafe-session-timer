<Window x:Class="cafe_session_timer.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register User" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <StackPanel Margin="20">
        <TextBlock Text="Username:" 
               FontWeight="SemiBold"
               Margin="0,0,0,2"/>
        <TextBox x:Name="UsernameBox" 
             Margin="0,0,0,10"/>

        
        <TextBlock Text="Password:" 
               FontWeight="SemiBold"
               Margin="0,0,0,2"/>
        <PasswordBox x:Name="PasswordBox" 
                 Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Register" Width="75" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
